<h1>Educations</h1>

<table>
  <thead>
  <tr>
    <th>College</th>
    <th>Course</th>
    <th>Join date</th>
    <th>Completion date</th>
    <th>Aggregate</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @educations.to_a.each do |education| %>
    <tr>
      <td><%= education.college %></td>
      <td><%= education.course %></td>
      <td><%= education.joining_date %></td>
      <td><%= education.completion_date %></td>
      <td><%= education.aggregate %></td>
      <td><%= link_to 'Show', education %></td>
      <td><%= link_to 'Edit', edit_education_path(education) %></td>
      <td><%= link_to 'Destroy', education, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<h1>Works</h1>

<table>
  <thead>
  <tr>
    <th>Company</th>
    <th>Role</th>
    <th>Join date</th>
    <th>Completion date</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @works.to_a.each do |work| %>
    <tr>
      <td><%= work.employee.first_name %></td>
      <td><%= work.role %></td>
      <td><%= work.join_date %></td>
      <td><%= work.completion_date %></td>
      <td><%= link_to 'Show', work %></td>
      <td><%= link_to 'Edit', edit_work_path(work) %></td>
      <td><%= link_to 'Destroy', work, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

